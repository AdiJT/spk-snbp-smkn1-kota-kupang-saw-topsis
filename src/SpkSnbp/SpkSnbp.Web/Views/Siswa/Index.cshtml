@using SpkSnbp.Web.Models.SiswaModels
@model List<Siswa>

@{
    ViewData["Title"] = "Siswa";
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Data</a></li>
            <li class="breadcrumb-item"><a asp-action="Index"></a>Siswa</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <!-- Judul -->
    <div class="card-header">
        <h4>Daftar Siswa</h4>
    </div>
    <div class="padding-20">

        <div class="d-flex justify-content-start ml-auto mb-3">
            <div class="mb-0">
                <button class="btn btn-tambah btn-icon icon-left btn-primary mr-1"
                        data-toggle="tooltip" title="Tambah Data Siswa">
                    <i class="fas fa-plus"></i> Tambah Data
                </button>
                <div class="form-tambah">
                    <partial name="_FormTambahPartial" model="@(new TambahVM())" />
                </div>
            </div>
        </div>

        <!-- Tabel -->
        <div class="table-responsive">
            <table style="width: 100%" class="table table-striped table-export">
                <thead>
                    <tr>
                        <th>Nama</th>
                        <th>NISN</th>
                        <th>Jurusan</th>
                        <th>Tahun Ajaran</th>
                        <th style="min-width: 130px">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var siswa in Model)
                    {
                        var editVM = new EditVM { Id = siswa.Id, NISN = siswa.NISN, Nama = siswa.Nama, Jurusan = siswa.Jurusan, IdTahunAjaran = siswa.TahunAjaran.Id };

                        <tr>
                            <td>@siswa.Nama</td>
                            <td>@siswa.NISN</td>
                            <td>@siswa.Jurusan.Humanize()</td>
                            <td>@siswa.TahunAjaran.Id</td>
                            <td>
                                <button class="btn-edit btn btn-primary btn-action">
                                    <i class="fas fa-pencil-alt"></i>
                                </button>

                                <div class="form-edit">
                                    <partial name="_FormEditPartial" model="@editVM" />
                                </div>

                                <form asp-action="Hapus" asp-route-id="@siswa.Id" style="display:inline" method="post">
                                    <button type="button" class="btn btn-danger btn-action swal-confirm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}