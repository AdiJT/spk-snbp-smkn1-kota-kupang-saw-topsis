@using SpkSnbp.Web.Areas.Dashboard.Models.KelasModels
@model List<Kelas>

@{
    ViewData["Title"] = "Kelas";
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Master Data</a></li>
            <li class="breadcrumb-item"><a asp-action="Index"></a>Kelas</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <!-- Judul -->
    <div class="card-header">
        <h4>Daftar Kelas</h4>
    </div>
    <div class="padding-20">

        <div class="d-flex justify-content-start ml-auto mb-3">
            <div class="mb-0">
                <button class="btn btn-tambah btn-icon icon-left btn-primary mr-1"
                    data-toggle="tooltip" title="Tambah Data Kelas">
                    <i class="fas fa-plus"></i> Tambah Data
                </button>
                <div class="form-tambah">
                    <partial name="_FormTambahPartial" model="@(new TambahVM())"/>
                </div>
            </div>

            <div class="mb-0">
                <a asp-action="PDF" class="btn btn-icon icon left btn-danger mr-1">
                    <i class="fas fa-file-pdf"></i> PDF
                </a>
            </div>

            <div class="mb-0">
                <a asp-action="Excel" class="btn btn-icon icon left btn-success mr-1">
                    <i class="fas fa-file-excel"></i> Excel
                </a>
            </div>
        </div>

        <!-- Tabel -->
        <div class="table-responsive">
            <table style="width: 100%" class="table table-striped table-export">
                <thead>
                    <tr>
                        <th>Kelas</th>
                        @foreach (var item in Enum.GetValues<Jurusan>())
                        {
                            <th>@item.Humanize()</th>
                        }
                        <th style="min-width: 130px">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kelas in Model)
                    {
                        var editVM = new EditVM { Id = kelas.Id, Nama = kelas.Nama };
                        <tr>
                            <td>@kelas.Nama</td>
                            @foreach (var item in Enum.GetValues<Jurusan>())
                            {
                                <td>@kelas.DaftarSiswa.Count(x => x.Jurusan == item)</td>
                            }
                            <td>
                                <button class="btn-edit btn btn-primary btn-action">
                                    <i class="fas fa-pencil-alt"></i>
                                </button>

                                <div class="form-edit">
                                    <partial name="_FormEditPartial" model="@editVM" />
                                </div>

                                <form asp-action="Hapus" asp-route-id="@kelas.Id" style="display:inline" method="post">
                                    <button type="button" class="btn btn-danger btn-action swal-confirm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}