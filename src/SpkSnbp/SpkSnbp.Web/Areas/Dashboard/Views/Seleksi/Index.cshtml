@using SpkSnbp.Web.Areas.Dashboard.Models.Seleksi
@model IndexVM

@inject ITahunAjaranRepository TahunAjaranRepository
@inject IKriteriaRepository KriteriaRepository
@inject IKelasRepository KelasRepository

@{
    ViewData["Title"] = "Seleksi";
    var daftarTahun = await TahunAjaranRepository.GetAll();
    var daftarKriteria = await KriteriaRepository.GetAll();
    var daftarKelas = await KelasRepository.GetAll();
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Hasil</a></li>
            <li class="breadcrumb-item"><a asp-action="Index"></a>Seleksi</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <!-- Judul -->
    <div class="card-header">
        <h4>Hasil Seleksi</h4>
    </div>
    <div class="padding-20">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <form asp-action="Index" method="get" class="d-flex align-items-center">
                <input name="first" id="first" value="False" readonly hidden />
                <div class="d-flex align-items-center mr-3" style="gap: 8px;">
                    <label asp-for="@Model.Tahun" class="mb-0" style="font-weight: 600; white-space: nowrap;">Tahun Ajaran:</label>
                    <select asp-for="@Model.Tahun" class="submit-on-change form-control form-control-sm w-auto" style="min-width:150px;">
                        @if (Model.Tahun is null)
                        {
                            <option value="@null">-- Tidak ada Tahun Ajaran --</option>
                        }
                        @foreach (var item in daftarTahun)
                        {
                            <option value="@item.Id">@item.Id</option>
                        }
                    </select>
                </div>

                <div class="d-flex align-items-center" style="gap: 8px;">
                    <label asp-for="@Model.Jurusan" class="mb-0" style="font-weight: 600; white-space: nowrap;">Jurusan:</label>
                    <select asp-for="@Model.Jurusan" class="submit-on-change form-control form-control-sm w-auto" style="min-width:150px;">
                        @foreach (var item in Enum.GetValues<Jurusan>())
                        {
                            <option value="@item">@item.Humanize()</option>
                        }
                    </select>
                </div>

                <div class="d-flex align-items-center" style="gap: 8px;">
                    <label asp-for="@Model.IdKelas" class="mb-0" style="font-weight: 600; white-space: nowrap;">Kelas:</label>
                    <select asp-for="@Model.IdKelas" class="submit-on-change form-control form-control-sm w-auto" style="min-width:150px;">
                        <option value="@null">-- Semua --</option>
                        @foreach (var item in daftarKelas)
                        {
                            <option value="@item.Id">@item.Nama</option>
                        }
                    </select>
                </div>
            </form>

            <div class="d-flex align-items-center">
                @if (Model.Tahun is not null && Model.DaftarSiswa.Count != 0)
                {
                    <form asp-action="Index" asp-route-jurusan="@Model.Jurusan" asp-route-tahun="@Model.Tahun" asp-route-idKelas="@Model.IdKelas" asp-route-returnUrl="@Context.Request.AbsoluteUri()" method="post">
                        <button class="btn btn-icon icon-left btn-primary"
                                data-toggle="tooltip" title="Lakukan Seleksi" type="submit">
                            <i class="fas fa-check-double"></i> Seleksi
                        </button>
                    </form>

                    <div class="ml-1 mb-0">
                        <a asp-action="PDF" asp-route-tahun="@Model.Tahun" asp-route-jurusan="@Model.Jurusan" asp-route-idKelas="@Model.IdKelas" class="btn btn-icon icon left btn-danger mr-1">
                            <i class="fas fa-file-pdf"></i> PDF
                        </a>
                    </div>

                    <div class="mb-0">
                        <a asp-action="Excel" asp-route-tahun="@Model.Tahun" asp-route-jurusan="@Model.Jurusan" asp-route-idKelas="@Model.IdKelas" class="btn btn-icon icon left btn-success mr-1">
                            <i class="fas fa-file-excel"></i> Excel
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="d-flex justify-content-between mb-3 mr-3">
            <div class="mb-0 card card-body rounded" style="background-color: #d9edf7; font-weight: 400; padding: 15px; color: #31708f;">
                <p class="mb-0">Seleksi hanya dapat dilakukan jika setiap data siswa memiliki nilai Preferensi! Jalankan perhitungan di halaman <a asp-action="Index" asp-controller="Perhitungan">Proses Hitung</a> untuk mendapatkan nilai preferensi.</p>
            </div>
        </div>

        <div class="table-responsive">
            <table style="width: 100%" class="table table-striped table-export">
                <thead>
                    <tr>
                        <th rowspan="2">Rangking</th>
                        <th rowspan="2">Nilai Preferensi</th>
                        <th rowspan="2">NISN</th>
                        <th rowspan="2">Nama</th>
                        <th rowspan="2">Eligible</th>
                        <th colspan="6">Kriteria</th>
                    </tr>
                    <tr>
                        @foreach (var item in daftarKriteria)
                        {
                            <th>(@item.Kode) @item.Nama</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Tahun is null)
                    {
                        <tr>
                            <td colspan="@(3 + daftarKriteria.Count)">Pilih Tahun Ajaran</td>
                        </tr>
                    }
                    else
                    {
                        var rank = 1;
                        @foreach (var item in Model.DaftarSiswa.OrderByDescending(x => x.NilaiTopsis))
                        {
                            <tr>
                                @if (item.NilaiTopsis is not null)
                                {
                                    <td>@rank</td>
                                    <td>@item.NilaiTopsis?.ToString("F3")</td>
                                    rank++;
                                }
                                else
                                {
                                    <td>-</td>
                                    <td>-</td>
                                }
                                <td>@item.NISN</td>
                                <td>@item.Nama</td>
                                @if (item.Eligible is not null)
                                {
                                    <td>@item.Eligible?.Humanize()</td>
                                }
                                else
                                {
                                    <td>-</td>
                                }
                                @foreach (var kriteria in daftarKriteria)
                                {
                                    var siswaKriteria = item.DaftarSiswaKriteria
                                    .FirstOrDefault(x => x.Kriteria == kriteria);

                                    if (siswaKriteria is not null)
                                    {
                                        if (kriteria.Kode == "C1" || kriteria.Kode == "C2")
                                        {
                                            <td>@siswaKriteria.Nilai.ToString("F2")</td>
                                        }
                                        else
                                        {
                                            <td>@siswaKriteria.Nilai</td>
                                        }
                                    }
                                    else
                                    {
                                        <td>-</td>
                                    }
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <!-- Tabel -->
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}