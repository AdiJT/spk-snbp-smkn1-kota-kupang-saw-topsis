@using SpkSnbp.Web.Areas.Dashboard.Models.KriteriaModels
@model List<Kriteria>

@{
    ViewData["Title"] = "Kriteria";
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Beranda</a></li>
            <li class="breadcrumb-item"><a asp-action="Index"></a>Kriteria</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <!-- Judul -->
    <div class="card-header">
        <h4>Daftar Kriteria</h4>
    </div>
    <div class="padding-20">
        <div class="d-flex justify-content-start ml-auto mb-3">
            <div class="mb-0">
                <a asp-action="PDF" class="btn btn-icon icon left btn-primary mr-1">
                    <i class="fas fa-file-pdf"></i> PDF
                </a>
            </div>

            <div class="mb-0">
                <a asp-action="Excel" class="btn btn-icon icon left btn-primary mr-1">
                    <i class="fas fa-file-excel"></i> Excel
                </a>
            </div>
        </div>

        <!-- Tabel -->
        <div class="table-responsive">
            <table style="width: 100%" class="table table-striped table-export">
                <thead>
                    <tr>
                        <th>Kode</th>
                        <th>Nama</th>
                        <th>Bobot</th>
                        <th>Jenis</th>
                        <th style="min-width: 130px">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kriteria in Model)
                    {
                        <tr>
                            <td>@kriteria.Kode</td>
                            <td>@kriteria.Nama</td>
                            <td>@kriteria.Bobot</td>
                            <td>@kriteria.Jenis.Humanize()</td>
                            <td>
                                <button class="btn-edit btn btn-primary btn-action">
                                    <i class="fas fa-pencil-alt"></i>
                                </button>
                                <div class="form-edit">
                                    @{
                                        var modelEdit = new EditVM { Id = kriteria.Id, Bobot = kriteria.Bobot, Jenis = kriteria.Jenis };
                                    }
                                    <partial name="_FormEditPartial" model="@modelEdit"/>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}