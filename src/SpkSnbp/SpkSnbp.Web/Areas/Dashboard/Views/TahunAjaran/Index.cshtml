@using SpkSnbp.Web.Areas.Dashboard.Models.TahunAjaranModels
@model List<TahunAjaran>

@{
    ViewData["Title"] = "Tahun Ajaran";
}

<!-- Breadcrumb -->
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Master Data</a></li>
            <li class="breadcrumb-item"><a asp-action="Index"></a>Tahun Ajaran</li>
        </ol>
    </nav>
</div>

<!-- Isi Konten -->
<div class="card card-primary">
    <!-- Judul -->
    <div class="card-header">
        <h4>Daftar Tahun Ajaran</h4>
    </div>
    <div class="padding-20">

        <div class="d-flex justify-content-start ml-auto mb-3">
            <div class="mb-0">
                <button class="btn btn-tambah btn-icon icon-left btn-primary mr-1"
                    data-toggle="tooltip" title="Tambah Data Tahun Ajaran">
                    <i class="fas fa-plus"></i> Tambah Data
                </button>
                <div class="form-tambah">
                    <partial name="_FormTambahPartial" model="@(new TambahVM())"/>
                </div>
            </div>

            <div class="mb-0">
                <a asp-action="PDF" class="btn btn-icon icon left btn-primary mr-1">
                    <i class="fas fa-file-pdf"></i> PDF
                </a>
            </div>

            <div class="mb-0">
                <a asp-action="Excel" class="btn btn-icon icon left btn-primary mr-1">
                    <i class="fas fa-file-excel"></i> Excel
                </a>
            </div>
        </div>

        <!-- Tabel -->
        <div class="table-responsive">
            <table style="width: 100%" class="table table-striped table-export">
                <thead>
                    <tr>
                        <th>Tahun</th>
                        <th>Jumlah Siswa</th>
                        <th style="min-width: 130px">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tahunAjaran in Model)
                    {
                        <tr>
                            <td>@tahunAjaran.Id</td>
                            <td>@tahunAjaran.DaftarSiswa.Count</td>
                            <td>
                                <form asp-action="Hapus" asp-route-tahun="@tahunAjaran.Id" style="display:inline" method="post">
                                    <button type="button" class="btn btn-danger btn-action swal-confirm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}